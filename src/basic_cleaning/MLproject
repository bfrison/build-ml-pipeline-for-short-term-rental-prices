name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name of the data set to download
        type: string

      output_artifact:
        description: Name of the cleaned data set
        type: string

      output_type:
        description: Type of the cleaned data set. This will be used to categorize the artifact in the W&B
        type: string

      output_description:
        description: A brief description of the output artifact
        type: string

      min_price:
        description: Minimum price below which rows are considered outliers and dropped out
        type: float

      max_price:
        description: Maximum price above which rows are considered outliers and dropped out
        type: float

      min_latitude:
        description: Minimum latitude below which rows are considered outliers and dropped out
        type: float

      max_latitude:
        description: Maximum latitude above which rows are considered outliers and dropped out
        type: float

      min_longitude:
        description: Minimum longitude below which rows are considered outliers and dropped out
        type: float

      max_longitude:
        description: Maximum longitude above which rows are considered outliers and dropped out
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}
        --min_price {min_price}  --max_price {max_price} --min_latitude {min_latitude} --max_latitude {max_latitude} --min_longitude {min_longitude} --max_longitude {max_longitude}
